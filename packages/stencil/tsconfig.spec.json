{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": ["node", "jest"],
  },
  "exclude": [
    "node_modules",
    "**/*.stories.*",
    "**/*.test.*",
    "**/*.mdx"
  ],
  "include": ["src", "testing"]
}
