{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "preserveSymlinks": true,
    "target": "ES2018",
    "module": "esnext",
    "lib": ["ES2018", "DOM"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "h",
    "types": ["node"],
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
